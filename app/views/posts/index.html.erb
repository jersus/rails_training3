<%= link_to "Create Post", new_post_path %>

<table border="1" style="width: 80%;">
  <tr>
  <td>#</td>
    <td>title</td>
    <td>Published</td>
    <td></td>
  </tr>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.id %></td>
      <td><%= post.title %></td>
      <td><%= post.published_at %></td>
      <td>
        <%= link_to "show", post_path( post ) %> |
        <%= link_to "edit", edit_post_path( post ) %> |
        <%= link_to "delete", post_path( post ), :method => :delete, :confirm => "delete?" %>
      </td>
    </tr>
  <% end %>
</table>